# Reference: <https://postmarketos.org/devicepkg>
pkgname="device-planet-geminipda"
pkgdesc="Gemini PDA"
pkgver=0.1
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="noarch"
options="!check"
depends="linux-planet-geminipda mkbootimg"
makedepends="devicepkg-dev"
source="deviceinfo 10-geminipda-loopback-device.sh"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname

	install -Dm644 "$srcdir"/10-geminipda-loopback-device.sh \
		"$pkgdir"/etc/postmarketos-mkinitfs/hooks/10-geminipda-loopback-device.sh
}

