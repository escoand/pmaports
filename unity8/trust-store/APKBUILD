# Contributor:
# Maintainer:
pkgname=trust-store
pkgver=0_git20180614
_commit="029270066854c281213cbf7dab10e21682c61b86"
pkgrel=0
pkgdesc='An API for creating, reading, updating and deleting trust requests answered by users.'
url='https://github.com/ubports/trust-store'
arch=all
license="LGPL-3.0"
depends=""
makedepends="cmake mir-dev boost-dev process-cpp-dev dbus-cpp-dev properties-cpp-dev libapparmor-dev libapparmor qt5-qtdeclarative-dev"
source="$pkgname-$_commit.tar.gz::https://github.com/ubports/$pkgname/archive/$_commit.tar.gz
        link_with_libintl.patch"
#options="!check"
builddir="$srcdir/$pkgname-$_commit" # TODO Improve, patch function apparently doesn't like a nested builddir

prepare() {
	default_prepare
	mkdir "$builddir/build"

	# Don't build tests
	truncate -s 0 "$builddir"/tests/CMakeLists.txt
}

build() {
	cd "$builddir/build"

	cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_INSTALL_LIBDIR="lib/" ..
	make
}

check() {
	cd "$builddir/build"
	make ARGS+="--output-on-failure" test
}

package() {
	cd "$builddir/build"
	make DESTDIR="$pkgdir" install
}
