# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer:
pkgname=unity-api
pkgver=0_git20180918
_commit="588b667714c1871d9a119b3b81171795eeee7452"
pkgrel=0
pkgdesc="API for Unity shell integration"
url="https://github.com/ubports/unity-api"
arch=all
license="LGPL-3.0"
depends=""
depends_dev=""
makedepends="$depends_dev cmake qt5-qtdeclarative-dev libqtdbustest"
source="$pkgname-$_commit.tar.gz::https://github.com/ubports/$pkgname/archive/$_commit.tar.gz"
subpackages="$pkgname-dev"
builddir="$srcdir/$pkgname-$_commit/build"

prepare() {
	default_prepare
	mkdir "$builddir"

	# Don't build tests, can't locate qmltestrunner binary
	truncate -s 0 "$builddir"/../test/CMakeLists.txt
}

build() {
	cd "$builddir"

	cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_INSTALL_LIBDIR="lib/" ..
	make
}

check() {
	cd "$builddir"
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}
sha512sums="5b3968a2c3abc219983c6c72172aaf83fe3cd7fd5b371a67113ee5b4eb9010703b4f531aaacb21497452515db8f5ddaf3d4a4b5dbc362484614c04bc1536b772  unity-api-588b667714c1871d9a119b3b81171795eeee7452.tar.gz"
