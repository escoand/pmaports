pkgname=cmake-extras
pkgver=0_git20170817
pkgrel=0
_commit="7a4639927c41b8e8f3144d0e11178a3cea5c4541"
pkgdesc='A collection of add-ons for the CMake build tool'
url='https://github.com/ubports/cmake-extras'
arch=noarch
license="GPL-3.0"
depends=""
makedepends="cmake"
source="$pkgname-$_commit.tar.gz::https://github.com/ubports/$pkgname/archive/$_commit.tar.gz
        Use_gtest_cmake_from_mir.patch"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cd "$builddir"
	cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr .
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}
