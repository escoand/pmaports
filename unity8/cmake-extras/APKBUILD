pkgname=cmake-extras
pkgver=0_git20180921
_commit=a711a56cac4b4f54b3545fc405356431b3250210
pkgrel=0
pkgdesc="A collection of add-ons for the CMake build tool"
url="https://github.com/ubports/cmake-extras"
arch=noarch
license="GPL-3.0"
depends="cmake"
makedepends="cmake"
source="$pkgname-$_commit.tar.gz::https://github.com/ubports/$pkgname/archive/$_commit.tar.gz
		Use_gtest_cmake_from_mir.patch
		fd96066de5607f7355007b5d323dd1daa0f96783.patch
		qmlplugindump_path.patch"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cd "$builddir"
	cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr .
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}
