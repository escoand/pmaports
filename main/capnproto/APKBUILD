# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=capnproto
pkgver=0.7.0
pkgrel=0
pkgdesc="Cap'n Proto serialization/RPC system"
arch="all"
url='https://capnproto.org/'
license='MIT'
depends=""
makedepends="linux-headers"
source="$pkgname-$pkgver.tar.gz::https://capnproto.org/$pkgname-c++-$pkgver.tar.gz"
subpackages="$pkgname-dev"
builddir="$srcdir/$pkgname-c++-$pkgver"

build() {
	cd "$builddir"
	./configure --prefix='/usr'
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install

	install -Dm644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
sha512sums="9f8fb5753155798fcf9377a87f984a54d9fc5157c41aa11cd94108a773ca22d6e6952657e2d8079c9806f7de06f316c94957329fa52dbab6207aaa3b52348f04  capnproto-0.7.0.tar.gz"
