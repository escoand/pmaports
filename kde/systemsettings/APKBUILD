# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=systemsettings
pkgver=5.13.5
pkgrel=0
pkgdesc="Plasma system manager for hardware, software, and workspaces"
arch="all"
url="https://www.kde.org/workspaces/plasmadesktop/"
license="GPL-2.0"
depends="kirigami2"
depends_dev="qt5-qtbase-dev qt5-qtquickcontrols2-dev kcrash-dev kitemviews-dev kcmutils-dev
	ki18n-dev kio-dev kservice-dev kiconthemes-dev kwidgetsaddons-dev kwindowsystem-dev
	kxmlgui-dev kdbusaddons-dev kconfig-dev kdoctools-dev kpackage-dev kdeclarative-dev
	kactivities-dev kactivities-stats-dev kirigami2-dev plasma-workspace-dev"
makedepends="$depends_dev extra-cmake-modules"
source="https://download.kde.org/stable/plasma/$pkgver/$pkgname-$pkgver.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DKDE_INSTALL_LIBEXECDIR=lib
	make
}

check() {
	cd "$builddir"
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}
sha512sums="cbe254dfff2d9637626586ad4df5da581f01acc16b24883269cc4c11a1ddd6d9dd3fb3e45680729f3b1197ddc30e185f7a2fdb2199f9f696e8eb6ea72ea88d79  systemsettings-5.13.5.tar.xz"
