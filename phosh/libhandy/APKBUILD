# Contributor:
# Maintainer:
pkgname=libhandy
pkgver=0_git20180524
pkgrel=0
_commit="6c61bf1ff538b9133b65b5d90b41829fea9775a7"
pkgdesc="A library full of GTK+ widgets for mobile phones"
url="https://code.puri.sm/Librem5/libhandy"
arch="all"
license="LGPL-2.1"
depends=""
makedepends="meson pkgconfig libgnome-dev gtk+3.0-dev gobject-introspection-dev vala"
install=""
subpackages="$pkgname-dev"
source="$pkgname-$_commit.tar.gz::https://code.puri.sm/Librem5/$pkgname/archive/$_commit.tar.gz"
builddir="$srcdir/$pkgname"

build() {
	cd "$builddir"
	meson . _build --prefix=/usr
	ninja -C _build
}

check() {
	cd "$builddir"
}

package() {
	cd "$builddir"
	DESTDIR="$pkgdir/" ninja -C _build install
}
