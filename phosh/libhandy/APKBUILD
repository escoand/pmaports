# Contributor:
# Maintainer:
pkgname=libhandy
pkgver=0.0.6
pkgrel=0
pkgdesc="A library full of GTK+ widgets for mobile phones"
url="https://code.puri.sm/Librem5/libhandy"
arch="all"
license="LGPL-2.1"
depends=""
depends_dev="libgnome-dev gobject-introspection-dev glade-dev"
makedepends="$depends_dev meson pkgconfig vala gtk-doc gtk+3.0-dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://source.puri.sm/Librem5/$pkgname/-/archive/v$pkgver/$pkgname-v$pkgver.tar.gz"
builddir="$srcdir/$pkgname-v$pkgver"

build() {
	cd "$builddir"
	meson . _build --prefix=/usr -Dgtk_doc=true
	ninja -C _build
}

check() {
	cd "$builddir"
}

package() {
	cd "$builddir"
	DESTDIR="$pkgdir" ninja -C _build install
}
sha512sums="7a474d081827c2cd21f069547c1285139e73976052e310b0ef4cbf3a4aa5a89d959b6dd39e690c1f6a79e7a0a72789199b2f907f694078e20219a0f6f91ca981  libhandy-0.0.6.tar.gz"
