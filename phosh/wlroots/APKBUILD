pkgname=wlroots
pkgver=0.2
pkgrel=2
pkgdesc="Pluggable, composable modules for building a Wayland compositor, with Purism hacks to support Phosh"
arch="all"
url="https://github.com/swaywm/wlroots"
license="MIT"
depends="wayland wayland-protocols xorg-server-xwayland"
depends_dev="libinput-dev xcb-util-image-dev"
makedepends="$depends_dev meson ninja mesa-dev eudev-dev pixman-dev wayland-dev libxkbcommon-dev"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/swaywm/$pkgname/archive/$pkgver.tar.gz"
options="suid"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	meson build --prefix=/usr -Denable-xwayland=true
	ninja -C build
}

package() {
	cd "$builddir"
	
	DESTDIR="$pkgdir" ninja -C build install

	install -D -m755 build/rootston/rootston "$pkgdir"/usr/bin/rootston
	chmod u+s "$pkgdir"/usr/bin/rootston
}
sha512sums="b7727b29ed7e5188d5fa6099687f8e6f48b6b3f17f7a6e136956ad6b607054595de3779118bffd4b9730115eaca2f00c2d30d52f4915b2753a749432ec0c3f2a  wlroots-0.2.tar.gz"
